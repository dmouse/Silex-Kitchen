<!DOCTYPE html>
<html ng-app="Silex">
    <head>
        <title>{% block title '' %} - My Silex Application</title>

        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link href="{{ app.request.basepath }}/css/tb.css" rel="stylesheet" type="text/css" />
        <link href="{{ app.request.basepath }}/css/main.css" rel="stylesheet" type="text/css" />
        
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
        <script src="{{ app.request.basepath }}/js/tb.js"></script>
        <script src="{{ app.request.basepath }}/js/main.js"></script>
        <script>
            
        </script>

    </head>
    <body>

        {#{render(url('menu'))}#}
            
        <div class="container">
      
            <div class="hero-unit">
                <h1>Hello, world!</h1>
            </div>

            <div class="row">
                <div class="span12">
                    {% block content %}{% endblock %}
                    {% if is_granted('ROLE_ADMIN') %}
                        Hello "{{ app.security.token.username }}".<br />
                        <a href="{{ path('logout') }}">{{ 'Logout'|trans }}</a>
                    {% else %}
                        Your a not logged. Please <a href="{{ path('login') }}">{{ 'connect'|trans }}</a>
                    {% endif %}
                </div>
            </div>

        </div> 

    </body>
</html>
