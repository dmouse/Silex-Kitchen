          <h2>Heading</h2>
            <ul>
                <li ng-repeat="phone in phones">
                    [[phone.name]]
                    <p>[[phone.snippet]]</p>
                </li>
            </ul>
        </div>
      </div>

      <hr>

      <footer>
        <p>&copy; Company 2013</p>
      </footer>

    </div> <!-- /container -->
            
            
        
    </body>
</html>
